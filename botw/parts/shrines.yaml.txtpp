tags:
  shrine-dlc:
    color: orange
    background:
      light: black
      dark: inherit
  counter-shrine:
    color: black
    background: cyan
  counter-dlc-shrine:
    color: black
    background: orange

presets:
  Shrine:
    text: ".loc($(0))"
    icon: $(1)
    icon-priority: 0
    counter: .var(counter-shrine)
    coord: [$(2), $(3), $(4)]
  ShrineDlc:
    text: ".shrine-dlc($(0))"
    icon: $(1)
    icon-priority: 0
    counter: .counter-dlc-shrine(EX)
    coord: [$(1), $(2), $(3)]
  #TXTPP#run python ../../scripts/shrines.py ../data/shrines.yaml
